using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;
using System.IO;

namespace MyProjects
{
    static class FileOperations
    {
        internal static RenameResult RenameFiles(string directory, string toRemove, string replacementStr = "")
        {
            bool validFilesExist = false;

            try
            {
                DirectoryInfo d = new DirectoryInfo(@directory);
                FileInfo[] infos = d.GetFiles();
                foreach (FileInfo f in infos)
                {
                    if (f.Name.Contains(toRemove))
                    {
                        validFilesExist = true;
                        RenameIndividualFile(f, toRemove, replacementStr);
                    }
                }
                RenameResult result = new RenameResult
                {
                    Success = true,
                };

                if (!validFilesExist)
                {
                    result.Message = "No valid files were found, dude";
                }
                else
                {
                    result.Message = "Success!(?) Go check the files...";
                }

                return result;
            }
            catch (System.IO.DirectoryNotFoundException)
            {
                RenameResult result = new RenameResult
                {
                    Success = false,
                    Message = "Dude, are you sure this is the right folder?"
                };
                return result;
            }
            catch (Exception e)
            {
                RenameResult result = new RenameResult
                {
                    Success = false,
                    Message = "Ugh, something went wrong - {0}" + e.Message
                };
                return result;
            }
        }

        private static void RenameIndividualFile(FileInfo f, string toBeReplacedStr, string replacementStr)
        {
            string newFileName, oldFileName;

            oldFileName = f.Name;
            newFileName = f.Name.Replace(toBeReplacedStr, replacementStr);
            File.Move(f.FullName, f.FullName.ToString().Replace(oldFileName, newFileName));
        }
    }
}
